alignment top_right
background yes
border_width 1
maximum_width 640
cpu_avg_samples 2
default_color white
default_outline_color red
default_shade_color red
draw_borders no
draw_graph_borders no
draw_outline no
draw_shades no
use_xft yes
#xftfont DejaVu Sans Mono:size=10
xftfont Arial:size=10
gap_x 10
gap_y 10
minimum_size 10 50
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_colour black
own_window_class Conky
own_window_type override
stippled_borders 0
update_interval 1.0
update_interval_on_battery 60
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
default_bar_size 155 12
default_graph_size 150 24

# 
template0 grey
# graph params: width,height colour1 colour2
template1 000000 F700FF
# hauteur des graphs (default_graph_size apres la virgule)
template2 24

color1 grey

TEXT
$color$alignc$nodename - $sysname $kernel
$hr
${color1}Batterie: ${color}$battery $battery_time $alignr$color1$alignr${battery_bar 12,155}
${color grey}Load:$color $loadavg $alignr${color1}${alignr}Processes:$color $running_processes/$processes
$color1${cpugraph cpu0 $template2,0 $template1 }$color

${color1}CPU$color ${cpu}%$alignr$color1${cpubar}
${color1}RAM:$color $memperc%$alignr$color1${membar}
${color1}Swap:$color $swapperc% $alignr$color1${swapbar}
${color1}/$color ${fs_used /}/${fs_size /}$alignr${color1}${fs_bar /}$color
# hwmon [dev] type n [factor offset]
# Hwmon sensor from sysfs (Linux 2.6).
# Parameter dev may be omitted if you have only one hwmon device.
# Parameter type is either 'in' or 'vol' meaning voltage; 'fan' meaning fan; 'temp' meaning temperature.
# Parameter n is number of the sensor. See /sys/class/hwmon/ on your local computer.
# The optional arguments 'factor' and 'offset' allow precalculation of the raw input, 
# which is being modified as follows: 'input = input * factor + offset'. 
# Note that they have to be given as decimal values (i.e. contain at least one decimal place).
#${color grey}ACPI:$color $acpitemp°C (${hwmon 0 temp 1}°C) ${color grey}Physical id 0:$color ${hwmon 1 temp 1}
${color grey}Core 0:$color ${hwmon 1 temp 2}°C $alignr${color grey}Core 1:$color ${hwmon 1 temp 3}°C$color
${color1}/dev/sda:$color ${hddtemp /dev/sda}°C

$color1${diskiograph_read /dev/sda 24,150  $template1}$alignr${diskiograph_write /dev/sda 24,150 $template1}
${color grey}I/O Read:$color $diskio_read$alignr${color grey}I/O Write:$color $diskio_write

${color $template0}ESSID:$color ${wireless_essid wlan0} (${addrs wlan0})
$color1${upspeedgraph wlan0 24,150 $template1}$alignr${downspeedgraph wlan0 24,150 $template1}
${color $template0}Up:$color ${upspeed wlan0}$alignr${color grey}Down:$color ${downspeed wlan0}

${font DejaVu Sans Mono:size=10}${color $template0}TOP                PID   CPU%   MEM%$color
${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}

